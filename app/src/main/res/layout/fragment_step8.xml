<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/rlTop">

            <ImageView
                android:id="@+id/ivjuxingbg"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@color/bg_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/ivjuxingbg"
                android:text="填表平衡分析"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">


            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="穴号" />


                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="1" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="2" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="3" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="4" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="5" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="6" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="最小" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="最大" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="平均值" />
            </TableRow>
        </TableLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10" />


        <Button
            android:id="@+id/btnAddRecord"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/drawable_add_blue"
            android:padding="@dimen/dp_5" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">


            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:layout_weight="1.2"
                    android:text="最小平均值" />


                <EditText
                    android:id="@+id/etMinAverageValue"
                    style="@style/step7_zhusu_et_style"
                    android:layout_weight="0.8"
                    android:enabled="false" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:layout_weight="1.2"
                    android:text="最大平均值" />

                <EditText
                    android:id="@+id/etMaxAverageValue"
                    style="@style/step7_zhusu_et_style"
                    android:layout_weight="0.8"
                    android:enabled="false" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:layout_weight="1.3"
                    android:text="最大最小平均值之差" />

                <EditText
                    android:id="@+id/etAverageValueZhiCha"
                    style="@style/step7_zhusu_et_style"
                    android:layout_weight="0.8"
                    android:enabled="false" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:layout_weight="1.5"
                    android:text="最大最小平均值所比之差" />

                <EditText
                    android:id="@+id/etAverageValueBiZhiCha"
                    style="@style/step7_zhusu_et_style"
                    android:enabled="false" />

            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/rlTop">

            <ImageView
                android:id="@+id/QIEHUANWEIZHI"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@color/bg_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/QIEHUANWEIZHI"
                android:text="填表平衡分析"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">


            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="切换位置" />


                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="1" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="2" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="3" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="4" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="5" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="6" />


                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:layout_weight="2"
                    android:text="照片" />

            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    android:id="@+id/tvPosition"
                    style="@style/step7_zhusu_text_style"
                    android:text="切换位置1" />


                <EditText
                    android:id="@+id/etDuanSheOne"
                    style="@style/step8_zhusu_et_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <TextView
                    android:id="@+id/tvOnePic"
                    style="@style/step8_tianbiao_text_style"
                    android:layout_weight="2" />
            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="切换位置2" />


                <EditText style="@style/step8_duanshe_text_style" />

                <EditText
                    android:id="@+id/etDuanSheTwo"
                    style="@style/step8_zhusu_et_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <TextView
                    android:id="@+id/tvTwoPic"
                    style="@style/step8_tianbiao_text_style"
                    android:layout_weight="2" />
            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="切换位置3" />


                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText
                    android:id="@+id/etDuanSheThree"
                    style="@style/step8_zhusu_et_style" />

                <EditText

                    style="@style/step8_duanshe_text_style" />

                <EditText

                    style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <TextView
                    android:id="@+id/tvThreePic"
                    style="@style/step8_tianbiao_text_style"
                    android:layout_weight="2" />
            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="切换位置4" />


                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText
                    android:id="@+id/etDuanSheFour"
                    style="@style/step8_zhusu_et_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <TextView
                    android:id="@+id/tvFourPic"
                    style="@style/step8_tianbiao_text_style"
                    android:layout_weight="2" />
            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="切换位置5" />


                <EditText

                    style="@style/step8_duanshe_text_style" />

                <EditText

                    style="@style/step8_duanshe_text_style" />

                <EditText

                    style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText
                    android:id="@+id/etDuanSheFive"
                    style="@style/step8_zhusu_et_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <TextView
                    android:id="@+id/tvFivePic"
                    style="@style/step8_tianbiao_text_style"
                    android:layout_weight="2" />
            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="切换位置6" />


                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText style="@style/step8_duanshe_text_style" />

                <EditText
                    android:id="@+id/etDuanSheSix"
                    style="@style/step8_zhusu_et_style" />

                <TextView
                    android:id="@+id/tvSixPic"
                    style="@style/step8_tianbiao_text_style"
                    android:layout_weight="2" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnNextStep"
            style="@style/nextStepBtnStyle"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>