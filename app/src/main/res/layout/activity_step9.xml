<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/top_title_layout" />

        <include layout="@layout/top_stepname_layout" />

        <include layout="@layout/top_excel_row_one_layout" />

        <include layout="@layout/top_excel_row_two_layout" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/rlTop">

            <ImageView
                android:id="@+id/ivjuxingbg"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@color/bg_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/ivjuxingbg"
                android:text="保压压力测试"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">


            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="保压压力测试" />


                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="1" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="2" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="3" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="平均值" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="备注" />

            </TableRow>

            <!--此处若是动态添加就用列表的方式，故先只画一行-->
            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="30" />


                <EditText style="@style/step7_zhusu_et_style" />

                <EditText style="@style/step7_zhusu_et_style" />

                <EditText style="@style/step7_zhusu_et_style" />

                <EditText style="@style/step7_zhusu_et_style" />

                <EditText style="@style/step7_zhusu_et_style" />

            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="最小保压" />


                <EditText style="@style/step7_zhusu_text_style" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="最大保压" />

                <EditText style="@style/step7_zhusu_text_style" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="确认保压" />

                <EditText style="@style/step7_zhusu_text_style" />

            </TableRow>

        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/rlTop">

            <ImageView
                android:id="@+id/baoyashijianceshi"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@color/bg_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/baoyashijianceshi"
                android:text="保压时间测试"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">


            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="保压时间" />


                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="1" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="2" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="3" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="重量平均值" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="备注" />

            </TableRow>

            <!--此处若是动态添加就用列表的方式，故先只画一行-->
            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="30" />


                <EditText style="@style/step7_zhusu_et_style" />

                <EditText style="@style/step7_zhusu_et_style" />

                <EditText style="@style/step7_zhusu_et_style" />

                <EditText style="@style/step7_zhusu_et_style" />

                <EditText style="@style/step7_zhusu_et_style" />

            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="最小保压" />


                <EditText style="@style/step7_zhusu_text_style" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="最大保压" />

                <EditText style="@style/step7_zhusu_text_style" />

                <TextView
                    style="@style/step7_zhusu_text_style"
                    android:text="确认保压" />

                <EditText style="@style/step7_zhusu_text_style" />

            </TableRow>

        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/rlTop">

            <ImageView
                android:id="@+id/ivYaLiTBFX"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@color/bg_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/ivYaLiTBFX"
                android:text="保压压力图标分析"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_step7_chart" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/rlTop">

            <ImageView
                android:id="@+id/ivSJTBFX"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@color/bg_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/ivSJTBFX"
                android:text="保压时间图标分析"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_step7_chart" />

        <Button
            android:id="@+id/btnNextStep"
            style="@style/nextStepBtnStyle"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>