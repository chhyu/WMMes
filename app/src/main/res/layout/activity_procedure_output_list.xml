<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.procedureOutput.activity.ProcedureOutputListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_head_img" />

        <RelativeLayout
            android:id="@+id/rlSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/appbar"
            android:background="@color/white"
            android:foreground="@drawable/ripple_bg">

            <LinearLayout
                android:id="@+id/llFileSearch"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_toLeftOf="@+id/rl1"
                android:background="@drawable/comm_shape_bg_search"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/comm_icon_search"
                    android:tint="@color/textHint" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/iv_search"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="搜索"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp_5"
                    android:singleLine="true"
                    android:textColorHint="@color/textHint"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/ivFilter"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/comm_icon_filter"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ripple_bg"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="搜索"
                    android:textColor="@color/bg_blue"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>


            <View style="@style/line_bg_gray_style" />

        </RelativeLayout>

        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/swipeMenuRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlSearch"
            android:layout_marginBottom="@dimen/bottom_height" />

        <com.weimi.wmmess.widget.emptyView.MaskView
            android:id="@+id/maskview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlSearch"
            android:layout_marginBottom="@dimen/bottom_height"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>