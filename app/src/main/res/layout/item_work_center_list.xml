<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/tvWorkCenterNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="名称："
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tvWorkCenterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@+id/tvWorkCenterNameText"
        android:text="扫地机器人"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tvWorkCenterId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:text="12345678910" />

    <TextView
        android:id="@+id/tvWorkCenterCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkCenterName"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="工作中心Code：" />

    <TextView
        android:id="@+id/tvWorkCenterCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkCenterName"
        android:layout_toRightOf="@+id/tvWorkCenterCodeText"
        android:text="123" />

    <TextView
        android:id="@+id/tvWorkCenterDesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkCenterCodeText"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="描述：" />

    <TextView
        android:id="@+id/tvWorkCenterDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkCenterCodeText"
        android:layout_toRightOf="@+id/tvWorkCenterDesText"
        android:text="哈哈哈" />

</RelativeLayout>