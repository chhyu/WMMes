<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--工单-->
    <RelativeLayout
        android:id="@+id/rlWorkOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="工单"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/comm_arrows_icon_right" />

        <TextView
            android:id="@+id/tvWorkOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow1"
            android:hint="请选择工单"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--工序-->
    <RelativeLayout
        android:id="@+id/rlProcedure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="工序"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow2"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/comm_arrows_icon_right" />

        <TextView
            android:id="@+id/tvProcedure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow2"
            android:hint="请选择工序"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--工作中心-->
    <RelativeLayout
        android:id="@+id/rlWorkCenter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="工作中心"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow3"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/comm_arrows_icon_right" />

        <TextView
            android:id="@+id/tvWorkCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow3"
            android:hint="请选择工作中心"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--工时种类-->
    <RelativeLayout
        android:id="@+id/rlWorkHourType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="工时种类"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow4"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/comm_arrows_icon_right" />

        <TextView
            android:id="@+id/tvWorkHourType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow4"
            android:hint="请选择工时种类"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--单价-->
    <RelativeLayout
        android:id="@+id/rlSinglePrice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/tvSinglePriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="单价"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow5"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15" />

        <EditText
            android:id="@+id/etSinglePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow5"
            android:layout_toRightOf="@+id/tvSinglePriceText"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入单价"
            android:inputType="numberDecimal"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--工作时间-->
    <RelativeLayout
        android:id="@+id/rlWorkTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="工作时间"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow6"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:src="@drawable/comm_icon_date" />

        <TextView
            android:id="@+id/tvWorkTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow6"
            android:hint="请选择工作时间"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--实际开始时间-->
    <RelativeLayout
        android:id="@+id/rlActualStartTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="实际开始时间"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow7"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:src="@drawable/comm_icon_date" />

        <TextView
            android:id="@+id/tvActualStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow7"
            android:hint="请选择实际开始时间"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>