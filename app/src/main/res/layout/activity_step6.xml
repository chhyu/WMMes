<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_10">

        <include layout="@layout/top_title_layout" />

        <include layout="@layout/top_stepname_layout" />

        <include layout="@layout/top_excel_row_one_layout" />

        <include layout="@layout/top_excel_row_two_layout" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1">


            <TableRow style="@style/tbRowStyleTwo">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:background="@drawable/bg_juxing_gray">

                    <TextView
                        style="@style/step6_yali_et_style"
                        android:layout_weight="1.5"
                        android:text="设定注塑压力" />

                    <EditText
                        android:id="@+id/etSheDingZhuSuYaLi"
                        style="@style/step6_yali_et_style" />

                </LinearLayout>


                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="1.3"
                    android:text="范围" />

                <TextView
                    style="@style/step6_yali_et_style"
                    android:text="实际" />

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="0.8"
                    android:text="OK&amp;NG" />


            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="2.2"
                    android:gravity="left"
                    android:text="1.不接触模具射出实际压力" />

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="1.3"
                    android:text="﹤20MPA或15%" />

                <EditText
                    android:id="@+id/etShijiOne"
                    style="@style/step6_yali_et_style"
                    android:text="" />

                <TextView
                    android:id="@+id/tvOKorNGOne"
                    style="@style/step6_yali_et_style"
                    android:layout_weight="0.8" />


            </TableRow>

            <!--2-->
            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="2.2"
                    android:gravity="left"
                    android:text="2.接触模具流道空射实际压力" />

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="1.3"
                    android:text="﹤30MPA或20%" />

                <EditText
                    android:id="@+id/etShijiTwo"
                    style="@style/step6_yali_et_style"
                    android:text="" />

                <TextView
                    android:id="@+id/tvOKorNGTwo"
                    style="@style/step6_yali_et_style"
                    android:layout_weight="0.8"
                    android:text="" />


            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="2.2"
                    android:gravity="left"
                    android:text="3.产品注塑量到10%实际压力" />

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="1.3"
                    android:text="﹤100MPA或70%" />

                <EditText
                    android:id="@+id/etShijiThree"
                    style="@style/step6_yali_et_style"
                    android:text="" />

                <TextView
                    android:id="@+id/tvOKorNGThree"
                    style="@style/step6_yali_et_style"
                    android:layout_weight="0.8"
                    android:text="" />


            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="2.2"
                    android:gravity="left"
                    android:text="4.保压切换实际压力" />

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="1.3"
                    android:text="﹤150MPA或85%" />

                <EditText
                    android:id="@+id/etShijiFour"
                    style="@style/step6_yali_et_style"
                    android:text="" />

                <TextView
                    android:id="@+id/tvOKorNGFour"
                    style="@style/step6_yali_et_style"
                    android:layout_weight="0.8"
                    android:text="" />


            </TableRow>

            <TableRow style="@style/tbRowStyleTwo">

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="2.2"
                    android:gravity="left"
                    android:text="5.实际最高压力" />

                <TextView
                    style="@style/step6_yali_et_style"
                    android:layout_weight="1.3"
                    android:text="﹤150MPA或85%" />

                <EditText
                    android:id="@+id/etShijiFive"
                    style="@style/step6_yali_et_style"
                    android:text="" />

                <TextView
                    android:id="@+id/tvOKorNGFive"
                    style="@style/step6_yali_et_style"
                    android:layout_weight="0.8"
                    android:text="" />

            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:text="注：以上任何一项实际压力超出范围，需要检查分析注塑机的射嘴是否合适、模具的流道和进胶点是否合适。"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_22"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNextStep"
            style="@style/nextStepBtnStyle"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>