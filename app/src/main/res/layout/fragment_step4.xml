<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/rlLuoGanWenDu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/rlTop">

            <ImageView
                android:id="@+id/ivLuoganwendu"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@color/bg_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/ivLuoganwendu"
                android:text="1.螺杆温度"
                android:textSize="@dimen/text_size_14" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_20"
            android:scaleType="fitXY"
            android:src="@mipmap/step4_luogan" />

        <!--1.螺杆温度-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TableRow style="@style/tbRowStyle">

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="加热区" />

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="喷嘴" />

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="1" />

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="2" />

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="3" />

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="4" />

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="5" />

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="下料口" />
            </TableRow>

            <TableRow style="@style/tbRowStyle">

                <TextView
                    style="@style/step4_temperature_et_style"
                    android:text="温度" />

                <EditText
                    android:id="@+id/etPenZui"
                    style="@style/step4_temperature_et_style" />

                <EditText
                    android:id="@+id/etOne"
                    style="@style/step4_temperature_et_style" />

                <EditText
                    android:id="@+id/etTwo"
                    style="@style/step4_temperature_et_style" />

                <EditText
                    android:id="@+id/etThree"
                    style="@style/step4_temperature_et_style" />

                <EditText
                    android:id="@+id/etFour"
                    style="@style/step4_temperature_et_style" />

                <EditText
                    android:id="@+id/etFive"
                    style="@style/step4_temperature_et_style" />

                <EditText
                    android:id="@+id/etXiaLiaoKou"
                    style="@style/step4_temperature_et_style" />
            </TableRow>

            <TableRow style="@style/tbRowStyle">

                <TextView
                    style="@style/step4_temperature_et_style"
                    android:layout_weight="2"
                    android:text="实际原料熔融温度（用温度测试仪测量" />

                <EditText
                    android:id="@+id/etCheckTemp"
                    style="@style/step4_temperature_et_style" />


            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:id="@+id/rlReLiuDaoWenDu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/rlTop"
            android:layout_marginTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/ivReLiuDaoWenDu"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@color/bg_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/ivReLiuDaoWenDu"
                android:text="2. 热流道温度"
                android:textSize="@dimen/text_size_14" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <!--2. 热流道温度-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TableRow style="@style/tbRowStyle">

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="主流道 " />


                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="温度" />

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="控制点" />

                <TextView
                    style="@style/step4_temperature_text_style"
                    android:text="温度" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvZhuLiuDao"
                style="@style/stepTwoStepTextStyle"
                android:padding="@dimen/dp_10"
                android:text="定模" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvKongZhiDian"
                style="@style/stepTwoStepTextStyle"
                android:padding="@dimen/dp_10"
                android:text="动模" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAddRecord"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/drawable_add"
            android:padding="@dimen/dp_5" />

        <!--3.模具温度   4.螺杆转速-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/rlTop"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivMuJuWenDu"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@color/bg_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/ivMuJuWenDu"
                    android:text="3.模具温度 "
                    android:textSize="@dimen/text_size_14" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@+id/rlTop"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivLuoGanSuDu"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@color/bg_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/ivLuoGanSuDu"
                    android:text="4.螺杆转速"
                    android:textSize="@dimen/text_size_14" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!--模具温度-->
                <TableRow style="@style/tbRowStyleTwo">

                    <TextView
                        style="@style/step4_temperature_et_style"
                        android:text="模具温度" />

                    <TextView
                        style="@style/step4_temperature_et_style"
                        android:enabled="false"
                        android:text="设定温度" />

                    <EditText
                        style="@style/step4_temperature_et_style"
                        android:enabled="false"
                        android:text="实际温度" />

                </TableRow>

                <!--定模温度-->
                <TableRow style="@style/tbRowStyleTwo">

                    <TextView
                        style="@style/step4_temperature_et_style"
                        android:text="定模模温" />

                    <EditText
                        android:id="@+id/etDingMoSheDing"
                        style="@style/step4_temperature_et_style" />

                    <EditText
                        android:id="@+id/etDingMoShiJi"
                        style="@style/step4_temperature_et_style" />

                </TableRow>

                <!--动模温度-->
                <TableRow style="@style/tbRowStyleTwo">

                    <TextView
                        style="@style/step4_temperature_et_style"
                        android:text="动模模温" />

                    <EditText
                        android:id="@+id/etDongMoSheDing"
                        style="@style/step4_temperature_et_style" />

                    <EditText
                        android:id="@+id/etDongMoShiJi"
                        style="@style/step4_temperature_et_style" />

                </TableRow>

                <!--滑块模温-->
                <TableRow style="@style/tbRowStyleTwo">

                    <TextView
                        style="@style/step4_temperature_et_style"
                        android:text="滑块模温" />

                    <EditText
                        android:id="@+id/etHuaKuaiSheDing"
                        style="@style/step4_temperature_et_style" />

                    <EditText
                        android:id="@+id/etHuaKuaiShiJi"
                        style="@style/step4_temperature_et_style" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!--螺杆直径-->
                <TableRow style="@style/tbRowStyleTwo">

                    <TextView
                        style="@style/step4_temperature_et_style"
                        android:text="螺杆直径" />

                    <EditText
                        android:id="@+id/etLGZJ"
                        style="@style/step4_temperature_et_style"
                        android:inputType="numberDecimal" />

                </TableRow>

                <!--原料-->
                <TableRow style="@style/tbRowStyleTwo">

                    <TextView
                        style="@style/step4_temperature_et_style"
                        android:text="原料" />

                    <EditText
                        android:id="@+id/etYuanLiao"
                        style="@style/step4_temperature_et_style" />

                </TableRow>

                <!--螺杆转速-->
                <TableRow style="@style/tbRowStyleTwo">

                    <TextView
                        style="@style/step4_temperature_et_style"
                        android:text="螺杆转速" />

                    <EditText
                        android:id="@+id/etLuoGanZhuanSu"
                        style="@style/step4_temperature_et_style"
                        android:inputType="numberDecimal" />

                </TableRow>

                <!--换算成 转/分钟-->
                <TableRow style="@style/tbRowStyleTwo">

                    <TextView
                        style="@style/step4_temperature_et_style"
                        android:text="换算成 转/分钟" />

                    <EditText
                        android:id="@+id/etZhuanFenZhong"
                        style="@style/step4_temperature_et_style"
                        android:enabled="false" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnNextStep"
            style="@style/nextStepBtnStyle"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>