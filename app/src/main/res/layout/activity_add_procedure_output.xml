<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.procedureInput.activity.AddProcedureInputActivity">

    <include layout="@layout/toolbar_head_img" />

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--工单-->
            <RelativeLayout
                android:id="@+id/rlWorkOrder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="工单"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/ivArrow1"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/comm_arrows_icon_right" />

                <TextView
                    android:id="@+id/tvWorkOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/ivArrow1"
                    android:hint="请选择工单"
                    android:textColor="@color/textHint" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--工序-->
            <RelativeLayout
                android:id="@+id/rlProcedure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="工序"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/ivArrow2"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/comm_arrows_icon_right" />

                <TextView
                    android:id="@+id/tvProcedure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/ivArrow2"
                    android:hint="请选择工序"
                    android:textColor="@color/textHint" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--工作中心-->
            <RelativeLayout
                android:id="@+id/rlWorkCenter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="工作中心"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/ivArrow3"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/comm_arrows_icon_right" />

                <TextView
                    android:id="@+id/tvWorkCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/ivArrow3"
                    android:hint="请选择工作中心"
                    android:textColor="@color/textHint" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--工作时间-->
            <RelativeLayout
                android:id="@+id/rlPlanStartTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="计划开始时间"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/ivArrow6"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/comm_icon_date" />

                <TextView
                    android:id="@+id/tvPlanStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/ivArrow6"
                    android:hint="请选择计划开始时间"
                    android:textColor="@color/textHint" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--实际开始时间-->
            <RelativeLayout
                android:id="@+id/rlActualStartTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="实际开始时间"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/ivArrow7"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/comm_icon_date" />

                <TextView
                    android:id="@+id/tvActualStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/ivArrow7"
                    android:hint="请选择实际开始时间"
                    android:textColor="@color/textHint" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--设备名称-->
            <RelativeLayout
                android:id="@+id/rlDeviceName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="设备名称"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/ivArrow11"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/comm_arrows_icon_right" />

                <TextView
                    android:id="@+id/tvDeviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/ivArrow11"
                    android:hint="请选择设备名称"
                    android:textColor="@color/textHint" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--员工-->
            <RelativeLayout
                android:id="@+id/rlEmployee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="员工"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/ivArrow12"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/comm_arrows_icon_right" />

                <TextView
                    android:id="@+id/tvEmployee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/ivArrow12"
                    android:hint="请选择员工"
                    android:textColor="@color/textHint" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--数量-->
            <RelativeLayout
                android:id="@+id/rlAmount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="数量"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/ivArrow14"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15" />

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/ivArrow14"
                    android:layout_toRightOf="@+id/tvAmount"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入数量"
                    android:inputType="number"
                    android:textColor="@color/textHint" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--计划结束时间-->
            <RelativeLayout
                android:id="@+id/rlPlanEndTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="计划结束时间"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/ivArrow16"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/comm_icon_date" />

                <TextView
                    android:id="@+id/tvPlanEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/ivArrow16"
                    android:hint="请选择计划结束时间"
                    android:textColor="@color/textHint" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--实际结束时间-->
            <RelativeLayout
                android:id="@+id/rlActualEndTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="实际结束时间"
                    android:textSize="@dimen/text_size_18" />

                <ImageView
                    android:id="@+id/ivArrow17"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/comm_icon_date" />

                <TextView
                    android:id="@+id/tvActualEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_toLeftOf="@+id/ivArrow17"
                    android:hint="请选择实际结束时间"
                    android:textColor="@color/textHint" />

                <View
                    style="@style/divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llContent"
        android:layout_marginTop="@dimen/dp_30">

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>