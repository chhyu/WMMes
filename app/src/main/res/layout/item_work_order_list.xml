<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_3">

    <TextView
        android:id="@+id/tvWorkOrderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="扫地机器人"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tvWorkOrderCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:text="12345678910" />

    <TextView
        android:id="@+id/tvProductTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkOrderName"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="产品类型：" />

    <TextView
        android:id="@+id/tvProductType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkOrderName"
        android:layout_toRightOf="@+id/tvProductTypeText"
        android:text="生产工单" />

    <TextView
        android:id="@+id/tvPlanCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProductTypeText"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="计划产量：" />

    <TextView
        android:id="@+id/tvPlanCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProductTypeText"
        android:layout_toRightOf="@+id/tvPlanCountText"
        android:text="1000" />

    <TextView
        android:id="@+id/tvStartTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlanCountText"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="开始时间：" />

    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlanCountText"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@+id/tvStartTimeText"
        android:text="2018.12.12" />

    <TextView
        android:id="@+id/tvEndTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStartTimeText"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="结束时间" />

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStartTimeText"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@+id/tvEndTimeText"
        android:text="2019.12.12" />


    <TextView
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStartTimeText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:text="进行中" />

</RelativeLayout>