<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlStepItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_step_bg_normal"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_6">

    <ImageView
        android:id="@+id/ivCheckedState"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/cb_step_gray"
        android:padding="@dimen/dp_6" />

    <TextView
        android:id="@+id/tvStepName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/ivCheckedState"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="试模前准备"
        android:textColor="@color/md_black_1000" />
</RelativeLayout>