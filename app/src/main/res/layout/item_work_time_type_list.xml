<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/tvWorkTimeTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="名称："
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tvWorkTimeTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/tvWorkTimeTypeText"
        android:text="名称"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tvWorkTimeTypeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:text="12345678910" />

    <TextView
        android:id="@+id/tvWorkTimeTypeCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkTimeTypeText"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="工时种类Code：" />

    <TextView
        android:id="@+id/tvWorkTimeTypeCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkTimeTypeText"
        android:layout_toRightOf="@+id/tvWorkTimeTypeCodeText"
        android:text="2011.12.12" />

    <TextView
        android:id="@+id/tvUpdateTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkTimeTypeCodeText"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="更新时间：" />

    <TextView
        android:id="@+id/tvUpdateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkTimeTypeCodeText"
        android:layout_toRightOf="@+id/tvUpdateTimeText"
        android:text="2011.12.12" />

</RelativeLayout>