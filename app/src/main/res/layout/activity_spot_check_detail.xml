<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/bottom_height"
    tools:context=".business.spotCheck.activity.SpotCheckDetailActivity">

    <include layout="@layout/toolbar_head_img" />

    <LinearLayout
        android:id="@+id/llCheckOption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:orientation="horizontal">

        <!--设备类型-->
        <RelativeLayout
            android:id="@+id/rlEquipmentType"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="设备类型"
                android:textSize="@dimen/text_size_18" />

            <ImageView
                android:id="@+id/ivArrow1"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/comm_arrows_icon_right" />

            <TextView
                android:id="@+id/tvEquipmentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_toLeftOf="@+id/ivArrow1"
                android:hint="请选择设备类型"
                android:textColor="@color/textHint" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <!--设备-->
        <RelativeLayout
            android:id="@+id/rlDevice"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="设备"
                android:textSize="@dimen/text_size_18" />

            <ImageView
                android:id="@+id/ivArrow2"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/comm_arrows_icon_right" />

            <TextView
                android:id="@+id/tvDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_toLeftOf="@+id/ivArrow2"
                android:hint="请选择设备"
                android:textColor="@color/textHint" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCheckOption2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCheckOption1"
        android:orientation="horizontal">

        <!--工单-->
        <RelativeLayout
            android:id="@+id/rlWorkOrder"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="工单"
                android:textSize="@dimen/text_size_18" />

            <ImageView
                android:id="@+id/ivArrow12"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/comm_arrows_icon_right" />

            <TextView
                android:id="@+id/tvWorkOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_toLeftOf="@+id/ivArrow12"
                android:hint="请选择工单"
                android:textColor="@color/textHint" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlChooseSpotType"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/llCheckOption2"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="点检类型"
                android:textSize="@dimen/text_size_18" />

            <ImageView
                android:id="@+id/ivArrow11"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/comm_arrows_icon_right" />

            <TextView
                android:id="@+id/tvSpotCheckType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_toLeftOf="@+id/ivArrow11"
                android:hint="请选择点检类型"
                android:textColor="@color/textHint" />

            <View
                style="@style/divider"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCheckHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/llCheckOption2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="序号" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="点检项目" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="OK" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="NG" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/llCheckHeader"
        android:background="@color/gray" />

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/swipeMenuRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:layout_marginTop="@dimen/dp_8" />

    <com.weimi.wmmess.widget.emptyView.MaskView
        android:id="@+id/maskview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:visibility="gone" />
</RelativeLayout>