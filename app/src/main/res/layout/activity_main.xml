<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/im_toolbar_bg"
        android:orientation="vertical"
        android:textColor="@color/textDim"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/im_toolbar_bg"
            android:gravity="center_vertical"
            app:layout_scrollFlags="scroll"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:titleTextColor="?color_toolbar_text">

            <ImageView
                android:id="@+id/ivQRcode"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="@dimen/dp_5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvToolTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="消息"
                android:textColor="@color/textDim"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivMoreOption"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivAddFriend"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:visibility="gone" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abl"
        android:layout_marginBottom="48dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <FrameLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bnv_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/white"
            app:itemIconTint="@drawable/selector_bottom_navigation_color"
            app:itemTextColor="@drawable/selector_bottom_navigation_color"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/main_bottom_navigation_menu" />

    </FrameLayout>

</RelativeLayout>