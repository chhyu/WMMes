<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--设备名称-->
    <RelativeLayout
        android:id="@+id/rlDeviceName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="设备名称"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/comm_arrows_icon_right" />

        <TextView
            android:id="@+id/tvDeviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow1"
            android:hint="请选择设备名称"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--员工-->
    <RelativeLayout
        android:id="@+id/rlEmployee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="员工"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow2"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/comm_arrows_icon_right" />

        <TextView
            android:id="@+id/tvEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow2"
            android:hint="请选择员工"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--工种-->
    <RelativeLayout
        android:id="@+id/rlWorkType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="工种"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow3"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/comm_arrows_icon_right" />

        <TextView
            android:id="@+id/tvWorkType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow3"
            android:hint="请选择工种"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--数量-->
    <RelativeLayout
        android:id="@+id/rlAmount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="数量"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow4"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow4"
            android:layout_toRightOf="@+id/tvAmount"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入数量"
            android:inputType="number"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--班次-->
    <RelativeLayout
        android:id="@+id/rlShift"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/tvrlShiftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="班次"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow5"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15" />

        <EditText
            android:id="@+id/etShift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow5"
            android:layout_toRightOf="@+id/tvrlShiftText"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入班次"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--持续时间-->
    <RelativeLayout
        android:id="@+id/rlDuration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/tvDurationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="持续时间"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow6"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15" />

        <EditText
            android:id="@+id/etDurationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow6"
            android:layout_toRightOf="@+id/tvDurationText"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入持续时间"
            android:inputType="numberDecimal"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


    <!--实际结束时间-->
    <RelativeLayout
        android:id="@+id/rlActualEndTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="实际结束时间"
            android:textSize="@dimen/text_size_18" />

        <ImageView
            android:id="@+id/ivArrow7"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:src="@drawable/comm_icon_date" />

        <TextView
            android:id="@+id/tvActualEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivArrow7"
            android:hint="请选择实际结束时间"
            android:textColor="@color/textHint" />

        <View
            style="@style/divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>